<% if(notification) { %>
    <div role="alert" style="position: fixed; top: 10px; right: 10px" aria-live="assertive" aria-atomic="true" class="toast fade" id="notification" data-delay="3000" data-autohide="true">
        <div class="toast-header">
            <svg class="rounded mr-2" width="40" height="20" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
                <rect fill="red" width="100%" height="100%" id="notification-color"/></svg>
            <strong class="mr-auto" id="notification-header"><%= notification.header %></strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body" id="notification-body"><%= notification.message %></div>
    </div>
<% } %>
