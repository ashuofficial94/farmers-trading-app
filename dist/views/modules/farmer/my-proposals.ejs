<div class="d-flex justify-content-center">
    <button class="btn btn-small btn-success rounded-pill" data-toggle="modal" data-target="#add-proposal">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Add Proposal</button>
</div>
<div class="modal fade" id="add-proposal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Proposal</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/add-farmer-proposal" method="post" id="add-proposal-form">
                    <div class="form-group-row form-inline">
                        <label for="username" class="col-sm-4 col-form-label">
                            <strong>User ID</strong>
                        </label>
                        <input type="text" class="col-sm-6 form-control rounded-pill" name="username" value="<%= user.userName %>" readonly></div>
                        <div class="form-group-row form-inline">
                            <label for="crop" class="col-sm-4 col-form-label">
                                <strong>Crop</strong>
                            </label>
                            <input type="text" class="col-sm-6 form-control rounded-pill" name="crop" placeholder="Crop Name" required></div>
                            <div class="form-group-row form-inline">
                                <label for="basePrice" class="col-sm-4 col-form-label">
                                    <strong>Base Price</strong>
                                </label>
                                <input type="number" class="col-sm-6 form-control rounded-pill" name="basePrice" placeholder="â‚¹" required>
                                    <small class="form-text text-muted">
                                        / 100 kgs</small>
                                </div>
                                <div class="form-group-row form-inline">
                                    <label for="state" class="col-sm-4 col-form-label">
                                        <strong>State</strong>
                                    </label>
                                    <select class="col-sm-6 form-control rounded-pill" name="state" id="location-state"></select>
                                </div>
                                <div class="form-group-row form-inline">
                                    <label for="city" class="col-sm-4 col-form-label">
                                        <strong>City</strong>
                                    </label>
                                    <select class="col-sm-6 form-control rounded-pill" name="city" id="location-city"></select>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" form="add-proposal-form" class="btn btn-small btn-success rounded-pill">Add Proposal</button>
                            <button type="button" class="btn btn-danger btn-small rounded-pill" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <section id="tabs" class="project-tab">
                <div class="row">
                    <div class="col-md-12">
                        <nav>
                            <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                                <a class="nav-item nav-link active" id="nav-open-tab" data-toggle="tab" href="#open-tab" role="tab" aria-controls="nav-open" aria-selected="true">Open</a>
                                <a class="nav-item nav-link" id="nav-pending-tab" data-toggle="tab" href="#pending-tab" role="tab" aria-controls="nav-pending" aria-selected="false">Pending</a>
                                <a class="nav-item nav-link" id="nav-closed-tab" data-toggle="tab" href="#closed-tab" role="tab" aria-controls="nav-closed" aria-selected="false">Closed/Resolved</a>
                            </div>
                        </nav>
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" role="tabpanel" aria-labelledby="nav-open-tab" id="open-tab">
                                <table class="table table-hover rounded" style="background: white">
                                    <thead>
                                        <tr>
                                            <th>Crop</th>
                                            <th>Base Price</th>
                                            <th>Status</th>
                                            <th>Bids</th>
                                            <th>Operation</th>
                                        </tr>
                                    </thead>
                                    <tbody id="open-proposals"></tbody>
                                </table>
                            </div>
                            <div class="tab-pane fade" id="pending-tab" role="tabpanel" aria-labelledby="nav-pending-tab">
                                <table class="table table-hover rounded" style="background: white">
                                    <thead>
                                        <tr>
                                            <th>Crop</th>
                                            <th>Base Price</th>
                                            <th>Status</th>
                                            <th>Bids</th>
                                        </tr>
                                    </thead>
                                    <tbody id="pending-proposals"></tbody>
                                </table>

                            </div>
                            <div class="tab-pane fade" id="closed-tab" role="tabpanel" aria-labelledby="nav-closed-tab">
                                <table class="table table-hover rounded" style="background: white">
                                    <thead>
                                        <tr>
                                            <th>Crop</th>
                                            <th>Base Price</th>
                                            <th>Status</th>
                                            <th>Bids</th>
                                        </tr>
                                    </thead>
                                    <tbody id="closed-proposals"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div class="modal fade" id="show-bids">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Current Bids</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body" id="show-bids-modal-body"></div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger btn-small rounded-pill" data-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>
